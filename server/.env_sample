# ==========================
# SERVER CONFIGURATION
# ==========================
PORT=5000
NODE_ENV=development

# ==========================
# JWT SECRET
# ==========================
# Generate a strong random secret (use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_jwt_secret_here

# ==========================
# ADMIN/SELLER CREDENTIALS
# ==========================
SELLER_EMAIL=your_admin_email@mail.com
SELLER_PASSWORD=your_strong_password_here

# ==========================
# MONGODB DATABASE
# ==========================
# Get from: https://cloud.mongodb.com
MONGODB_URL=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/database_name

# ==========================
# CLOUDINARY (Image Upload)
# ==========================
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================
# RAZORPAY (Payment Gateway)
# ==========================
# Get from: https://dashboard.razorpay.com/app/keys
RAZOR_PAY_PUBLISHABLE_KEY=rzp_test_xxxxxxxxxxxxx
RAZOR_PAY_SECRET_KEY=your_razorpay_secret_key